<Window x:Class="ZininaMatveevaTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZininaMatveevaTest"
        mc:Ignorable="d"
        Title="Окно выбора роли" Height="450" Width="800" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image Source="/Resources/Шеврон.jpg" HorizontalAlignment="Left" />
        <Border Background="#FF146D46" Margin="100 0 0 0"/>
        <TextBlock Text="ТПСК им. В.М. Максимчука" FontSize="50" FontWeight="Bold" 
                   Margin="100 0 0 0" VerticalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Тесты по дисциплине" FontSize="35" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Экономика отрасли" FontSize="35" FontWeight="Bold"
                       Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Grid.Row="2" Height="40" Width="400" Content="Преподаватель"
                    Name="TeacherBtn" Click="TeacherBtn_Click"/>
            <Button Grid.Row="3" Height="40" Width="400" Content="Студент"
                    Name="StudentBtn" Click="StudentBtn_Click"/>
            
        </Grid>
    </Grid>
</Window>
