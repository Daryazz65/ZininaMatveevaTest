<Page x:Class="ZininaMatveevaTest.View.Teacher.Pages.DeleteStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZininaMatveevaTest.View.Teacher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="383" d:DesignWidth="800"
      Title="TwoPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="220" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Выберите группу" FontSize="20" VerticalAlignment="Center"/>
        <TextBlock Text="Выберите студента" Grid.Column="2" FontSize="20" VerticalAlignment="Center"/>
        <ComboBox Grid.Column="1" Margin="10"/>
        <ComboBox Grid.Column="3" Margin="10"/>
        <DataGrid Grid.Row="1" Grid.ColumnSpan="4" Margin="10"/>
        <Button Content="Назад" Grid.Row="2" Margin="10"/>
        <Button Content="Печать" Grid.Column="1" Grid.Row="2" Margin="10"/>
        
        <DataGrid Foreground="Azure" x:Name="UserDG" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  Grid.Row="1" ColumnWidth="*" Margin="5" IsSynchronizedWithCurrentItem="True" 
                  SelectionChanged="UserDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="FullName" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="IdRole" Binding="{Binding Role.Name}"/>
                <DataGridTextColumn Header="IdPost" Binding="{Binding Post.Name}"/>
                <DataGridTextColumn Header="Photo" Binding="{Binding Photo}"/>
                <DataGridTextColumn Header="DateRegistration" Binding="{Binding DateRegistration}"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}"/>
                <DataGridTemplateColumn Header="Изменить">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="EditBtn">
                                <TextBlock Text="Изменить" FontSize="13"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Удалить">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="DeleteBtn" Click="DeleteBtn_Click">
                                <TextBlock Text="Удалить" FontSize="13"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>