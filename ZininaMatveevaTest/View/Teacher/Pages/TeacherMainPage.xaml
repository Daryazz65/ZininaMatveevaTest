<Page x:Class="ZininaMatveevaTest.View.Teacher.Pages.TeacherMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZininaMatveevaTest.View.Teacher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="383" d:DesignWidth="800"
      Title="OnePage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Content="Добавить студента" Name="AddStudent" Click="AddStudent_Click" 
                Width="400" Height="50"/>
        <Button Content="Добавить группу" Name="AddGroupBtn" Click="AddGroupBtn_Click" 
                Width="400" Height="50" Grid.Row="1"/>
        <Button Content="Список студентов с оценками" Name="ListMarkStudentBtn" Click="ListMarkStudentBtn_Click" 
                Width="400" Height="50" Grid.Row="2"/>
        <Button Content="Удалить студента" Name="DeleteStudentBtn" Click="DeleteStudentBtn_Click"
                Width="400" Height="50" Grid.Row="3"/>
        <Button Content="Выйти в главное меню" Name="GoOutBtn" Click="GoOutBtn_Click"
                Width="400" Height="50" Grid.Row="4"/>
        <Frame Name="MenuFrame"  NavigationUIVisibility="Hidden" Grid.RowSpan="5"/>
    </Grid>
</Page>
